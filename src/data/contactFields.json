{
  "version": "1.0.0",
  "lastModified": "2024-01-15T10:30:00Z",
  "folders": [
    {
      "id": "contact",
      "name": "Contact",
      "icon": "user",
      "description": "Essential contact details",
      "collapsible": false,
      "defaultExpanded": true,
      "fields": [
       
        {
          "id": "firstName",
          "name": "First Name",
          "type": "text",
          "required": true,
          "maxLength": 50,
          "placeholder": "Enter first name",
          "validation": {
            "min": 1,
            "max": 50,
            "message": "First name must be between 1 and 50 characters"
          }
        },
        {
          "id": "lastName",
          "name": "Last Name",
          "type": "text",
          "required": true,
          "placeholder": "Enter last name",
          "maxLength": 50,
          "validation": {
            "min": 1,
            "max": 50,
            "message": "Last name must be between 1 and 50 characters"
          }
        },
        {
          "id": "email",
          "name": "Email",
          "type": "email",
          "required": true,
          "placeholder": "user@example.com",
          "validation": {
            "pattern": "^[\\w\\.-]+@[\\w\\.-]+\\.[a-zA-Z]{2,}$",
            "message": "Please enter a valid email address"
          }
        },
        {
          "id": "phone",
          "name": "Phone Number",
          "type": "text",
          "required": false,
          "placeholder": "+1 (555) 123-4567",
          "validation": {
            "message": "Please enter a valid phone number"
          }
        }
      ]
    },
    {
      "id": "additional-details",
      "name": "Additional Details",
      "icon": "info",
      "description": "Additional contact details",
      "collapsible": true,
      "defaultExpanded": false,
      "fields": [
        {
          "id": "businessName",
          "name": "Business Name",
          "type": "text",
          "required": false,
          "placeholder": "Business name"
        },
        {
          "id": "streetAddress",
          "name": "Street Address",
          "type": "text",
          "required": false,
          "placeholder": "123 Main St, Springfield, IL 62704"
        },
        {
          "id": "city",
          "name": "City",
          "type": "text",
          "required": false
        },
        {
          "id": "country",
          "name": "Country",
          "type": "radio",
          "required": false
        },
        {
          "id": "followers",
          "name": "Followers",
          "type": "multi-select",
          "required": false
        }
      ]
    }
  ]
}
